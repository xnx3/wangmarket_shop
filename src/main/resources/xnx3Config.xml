<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!-- 使用此配置，需导入：
		commons-configuration-1.7.jar
		commons-collections-3.2.1.jar
		commons-io-1.3.2.jar
		commons-lang-2.5.jar
		commons-logging-1.2.jar
	 -->

	<!-- 短信发送配置,若使用了短信发送功能，需配置此项 -->
	<sms>
		<!-- 用户ID -->
		<uid>80...</uid>
		<!-- 企业代码 -->
		<companyCode>....</companyCode>
		<!-- 登录密码 -->
		<password>......</password>
		<!-- 默认这里不用填写，使用的便是默认端口，也就是不填写默认使用的是25端口。
			但是阿里云的Docker服务安全考虑，是关闭25端口的，使用80端口代替，所以如果遇到这种情况时，可以在此配置发信端口
		 -->
		<mailSmtpPort>80</mailSmtpPort>
		<!-- 发信服务器IP，固定即可 -->
		<requestIp>210.5.158.31</requestIp>
	</sms>
	
	<!-- 邮件发送。
		网市场中，判断是否已开启邮件发送功能时，是根据判断username、password是否填写来判断的
	-->
	<mail>
		<!-- mail.smtp.host -->
		<host>smtpdm.aliyun.com</host>
		<!-- 邮箱登陆的用户名、邮箱名、邮箱地址，如xnx3@163.com -->
		<username>inform@mail.wang.market</username>
		<!-- 登陆密码 -->
		<password></password>
		<!-- 默认这里不用填写，使用的便是默认端口，也就是不填写默认使用的是25端口。
			但是阿里云的Docker服务安全考虑，是关闭25端口的，使用80端口代替，所以如果遇到这种情况时，可以在此配置发信端口
		 -->
		<mailSmtpPort>80</mailSmtpPort>
		<!-- 是否开启调试日志 -->
		<debug>false</debug>
	</mail>
	
	<!-- FastDFS分布式文件上传配置 -->
	<FastDFS>
		<connect_timeout>2</connect_timeout>
		<network_timeout>30</network_timeout>
		<charset>ISO8859-1</charset>
		<tracker_http_port>8080</tracker_http_port>
		<!-- 是否开启token防盗链 -->
		<anti_steal_token>false</anti_steal_token>
		<secret_key>FastDFS1234567890</secret_key>
		<!-- 默认的组 -->
		<default_group_name>group1</default_group_name>
		<!-- 是否开启调试，在控制台打印相关运行日志 -->
		<debug>true</debug>
		<!-- 如果上传时没有找到文件的后缀，则以此为后缀进行上传 -->
		<default_fileSuffix>unknow</default_fileSuffix>
		<tracker_servers>
			<!-- ip:端口号 -->
			<tracker_server>115...111:22122</tracker_server>
		</tracker_servers>
	</FastDFS>
	
	<!-- ping++支付 -->
	<pingxx>
		<apiKey>sk_test_aaaaaaaaaaaaaaaaaaaaaaaa</apiKey>
		<appId>app_aaaaaaaaaaaaaaaa</appId>
		<!-- 私钥 -->
		<privateKey></privateKey>
		<!-- 公钥 -->
		<publicKey>/bdGCNGpQ/HSJfWLtzmhCqO1aJwVhcDmDMYz4bTkZavhFBdVyXf/8n7UKylk03eymlKJ1swQpeFcxaKfzsk1mJU7mc93mCWjaR+VWkNbw4AQHDyHgbzH+zYARzCluiy5hXdixGEP+iO4ZBk48rEs1hKTvGz1k+jhLCdkdpBRjq0pK/htjA3Ce8pF2AJs+fgN6ZUumQIDAQAB</publicKey>
		<!-- 控制台是否开启打印错误日志 -->
		<debug>true</debug>
	</pingxx>
	
	<!-- 阿里云 OSS, 用户的头像、UEditor图片、附件等上传，都是使用的这里。具体如何使用，可参考 http://www.guanleiming.com/2327.html 
		另外若不使用OSS对象存储，accessKeyId 不要填写为空即可！
	-->
	<aliyunOSS>
		<!-- 存储在哪，如杭州的便是 oss-cn-hangzhou.aliyuncs.com 。授权版本中，若此处不填写，会自动从数据库中加载配置 -->
		<endpoint></endpoint>
		<!-- AccessKeyId 可从这里获取 https://ak-console.aliyun.com 若不使用OSS对象存储，此处不要填写为空即可！  -->
		<accessKeyId></accessKeyId>
		<!-- AccessKeySecret 可从这里获取 https://ak-console.aliyun.com  -->
		<accessKeySecret></accessKeySecret>
		<!-- Bucket名称，请修改此项为 “iw+一串小写英文字母” 作为它的值， 如 “iwwangmarketdomain” 程序系统在开启后，初始化时若此bucket不存在，会自动创建此bucket -->
		<bucketName></bucketName>
		<!-- OSS外网域名，文件上传成功时会加上此域名拼接出文件的访问完整URL。位于Bucket概览－OSS域名 ，若为空则会根据以上配置自动拼接生成url；若填写，格式严格按照此格式写，如 http://res.weiunity.com   -->
		<url></url>
		<roleArn></roleArn>
	</aliyunOSS>
	
	<!-- 
		友盟APP消息推送，需jar包：
			json-***.jar
			httpcore-***.jar
			httpclient-***.jar
			commons-logging-***.jar
			commons-codec-***.jar
			umpush.jar
	 -->
	<umengPush>
		<!-- 友盟推送里面，增加的Android应用的相关信息 -->
		<android>
			<appKey></appKey>
			<appMasterSecret></appMasterSecret>
		</android>
		<!-- 友盟推送里面，增加的iOS应用的相关信息 -->
		<ios>
			<appKey></appKey>
			<appMasterSecret></appMasterSecret>
		</ios>
	</umengPush>
	
</configuration>